leetcode: 121. Best Time to Buy and Sell Stock

class Solution {
    public int maxProfit(int[] prices) {
         int minPrice=Integer.MAX_VALUE;
         int maxPrice=0;
         for(int i=0;i<prices.length;i++)
         {
            if(prices[i]<minPrice)
            {
                minPrice=prices[i];
            }
            else
            {
                int profit = prices[i]-minPrice;
                if(profit>maxPrice)
                {
                    maxPrice=profit;
                }
            }
         }
         return maxPrice;
    }
}

